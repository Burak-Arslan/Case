<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_splash"
    app:startDestination="@+id/FRSplash">

    <fragment
        android:id="@+id/FRSplash"
        android:name="com.ambluden.myapplication.ui.splash.FRSplash"
        android:label="@string/title_splash"
        tools:layout="@layout/fr_splash">
        <action
            android:id="@+id/toNavHome"
            app:destination="@id/FRHome" />
    </fragment>
    <fragment
        android:id="@+id/FRHome"
        android:name="com.ambluden.myapplication.ui.home.FRHome"
        android:label="@string/title_home" >
        <action
            android:id="@+id/toFRHomeDetail"
            app:destination="@id/FRHomeDetail" />
    </fragment>
    <fragment
        android:id="@+id/FRHomeDetail"
        android:name="com.ambluden.myapplication.ui.home_detail.FRHomeDetail"
        android:label="FRHomeDetail" />

</navigation>